<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/dish_item"
    android:layout_width="match_parent"
    android:background="@drawable/round_card"
    android:layout_marginRight="16sp"
    android:layout_marginLeft="16sp"
    android:layout_marginTop="16sp"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/photoCard2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardCornerRadius="16sp"
        android:elevation="10dp">

        <ImageView
            android:id="@+id/photo2"
            app:layout_constraintCircleRadius="20sp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:scaleType="fitXY"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:id="@+id/line_info2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/photoCard2"
        app:layout_constraintStart_toStartOf="parent">

    <Space
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_weight="1"></Space>

    <TextView
        android:id="@+id/dishTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8sp"
        android:text="Утка по-пекински"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/photoCard2" />

    <Space
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_weight="1"></Space>

    <TextView
        android:id="@+id/dishPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16sp"
        android:text="1500"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@+id/number"
        app:layout_constraintTop_toBottomOf="@+id/photoCard" />

    <TextView
        android:id="@+id/sdaklf"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="P"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@+id/textView8"
        app:layout_constraintTop_toBottomOf="@+id/photoCard" />

    <Space
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_weight="1"></Space></LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>